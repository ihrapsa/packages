if PACKAGE_ffmpeg4

menu "Configuration"

config ffmpeg4_LICENSING
  bool "See help for licensing information"
  help
	Short version:
	Default license is GNU Lesser General Public License v2.1 or later

	Following changes it to GPL:
	Building it for x86 due to assembly files
	Support for libx264

	Following changes it to version 3:
	Support for mbed TLS

	Following makes it non distributable and requires
	"Compile with support for patented functionality"
	to be set.
	Support for FDK-AAC and OpenSSL

	More information here:
	https://github.com/FFmpeg/FFmpeg/blob/master/LICENSE.md
  default n

config ffmpeg4_ENC_FLV
  bool "Enable builtin FLV encoder"
  default y if !mips && !mipsel && !mips64

config ffmpeg4_ENC_MJPEG
  bool "Enable builtin MJPEG encoder"
  default y if !mips && !mipsel && !mips64

config ffmpeg4_ENC_MPEG4
  bool "Enable builtin MPEG4 encoder"
  default y if !mips && !mipsel && !mips64

config ffmpeg4_ENC_PNG
  bool "Enable builtin PNG encoder"
  default n

config ffmpeg4_FEAT_DASH
  bool "Enable support for Dynamic Adaptive Streaming over HTTP (DASH)"
  default y

config ffmpeg4_LIB_FDK-AAC
  bool "Enable FDK-AAC (AAC encoding) support"
  default n

config ffmpeg4_LIB_LAME
  bool "Enable LAME (MP3 encoding) support"
  default y if !mips && !mipsel && !mips64

config ffmpeg4_LIB_LIBVORBIS
  bool "Enable Ogg Vorbis (de/encoding) support using libvorbis"
  default n

config ffmpeg4_LIB_LIBOPUS
  bool "Enable Opus (de/encoding) support using libopus"
  default n

config ffmpeg4_LIB_LIBX264
  bool "Enable x264 (h264 encoding) support"
  default n

config ffmpeg4_OPT_PERFORMANCE
  bool "Optimize for performance"
  default y if !mips && !mipsel && !mips64

endmenu

choice

  prompt "SSL Library"
  default ffmpeg4_LIB_MBEDTLS

config ffmpeg4_LIB_MBEDTLS
  bool "mbed TLS"

config ffmpeg4_LIB_OPENSSL
  bool "OpenSSL"

endchoice

endif
